<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/ri_avatar_comment"
            app:cornerRadius="50dp"
            app:roundedCorners="all"
            android:src="@drawable/g"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_up_name_comment"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="XXXXXX"
            android:layout_marginStart="10dp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/ri_avatar_comment"/>
        <TextView
            android:id="@+id/tv_up_time_intro"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="7-29"
            android:layout_marginStart="10dp"
            android:textColor="@color/pink"
            android:layout_toEndOf="@id/ri_avatar_comment"
            android:layout_below="@+id/tv_up_name_comment"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="70dp"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <cc.leishui.bilitx.widget.OCTextView
            android:id="@+id/tv_comment_content"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_good_reply"
                android:src="@drawable/good_blank_gray"
                android:layout_width="@dimen/iv_reply_size"
                android:layout_height="@dimen/iv_reply_size"/>
            <TextView
                android:id="@+id/tv_good_reply"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/iv_reply_size"/>
            <ImageView
                android:id="@+id/iv_bad_reply"
                android:layout_marginStart="@dimen/iv_reply_size"
                android:src="@drawable/bad_blank_gray"
                android:layout_width="@dimen/iv_reply_size"
                android:layout_height="@dimen/iv_reply_size"/>
            <ImageView
                android:id="@+id/iv_share_reply"
                android:layout_marginStart="@dimen/iv_reply_size"
                android:src="@drawable/share_blank_gray"
                android:layout_width="@dimen/iv_reply_size"
                android:layout_height="@dimen/iv_reply_size"/>
            <ImageView
                android:id="@+id/iv_reply_reply"
                android:layout_marginStart="@dimen/iv_reply_size"
                android:src="@drawable/reply_gray"
                android:layout_width="@dimen/iv_reply_size"
                android:layout_height="@dimen/iv_reply_size"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/gray"
            android:id="@+id/ll_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_20"/>

</LinearLayout>