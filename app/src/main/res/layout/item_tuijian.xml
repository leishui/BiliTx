<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_fg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_tj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/iv_tj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loading"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:textColor="?attr/app_text"
            android:id="@+id/tv_t_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/ll_bottom_tj"
            android:src="@drawable/up_gray"/>
        <TextView
            android:id="@+id/tv_up_tj"
            android:textColor="?attr/app_text"
            android:layout_marginStart="25dp"
            android:layout_above="@+id/ll_bottom_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_bottom_tj"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_view_tj"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view_count_gray"/>
            <TextView
                android:textColor="?attr/app_text"
                android:id="@+id/tv_view_tj"
                android:layout_marginStart="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/danmaku_count_gray"/>
            <TextView
                android:textColor="?attr/app_text"
                android:id="@+id/tv_danmaku_tj"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_20"/>
</LinearLayout>